{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "@utils/*": [
                "./utils/*"
            ],
            "@user/*": [
                "./user/*"
            ],
            "@position/*": [
                "./position/*"
            ],
            "@order/*": [
                "./order/*"
            ],
            "@category/*": [
                "./category/*"
            ],
            "@analytics/*": [
                "./analytics/*"
            ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "target": "ESNext",
            "module": "CommonJS"
        },
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
